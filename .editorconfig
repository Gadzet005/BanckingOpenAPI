root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

[*.{js,ts,py}]
charset = utf-8
max_line_length = 80

[*.{html,css,jsx,tsx}]
indent_size = 2

[Makefile]
indent_style = tab

[*.nix]
indent_style = space
indent_size = 2

[lib/**.js]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
